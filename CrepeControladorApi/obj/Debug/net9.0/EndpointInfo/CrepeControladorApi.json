{
  "openapi": "3.0.1",
  "info": {
    "title": "CrepeControladorApi",
    "version": "1.0"
  },
  "paths": {
    "/api/Items": {
      "post": {
        "tags": [
          "Items"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemCreateDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemCreateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ItemCreateDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Pedidos": {
      "post": {
        "tags": [
          "Pedidos"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PedidoCreateDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PedidoCreateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PedidoCreateDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ItemCreateDto": {
        "required": [
          "nome"
        ],
        "type": "object",
        "properties": {
          "nome": {
            "maxLength": 150,
            "minLength": 0,
            "type": "string"
          },
          "preco": {
            "maximum": 999999,
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "ativo": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "PedidoCreateDto": {
        "required": [
          "codigo",
          "tipoPedido"
        ],
        "type": "object",
        "properties": {
          "codigo": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "cliente": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "tipoPedido": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "observacao": {
            "maxLength": 250,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "itens": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PedidoItemCreateDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PedidoItemCreateDto": {
        "required": [
          "itemId"
        ],
        "type": "object",
        "properties": {
          "itemId": {
            "type": "integer",
            "format": "int32"
          },
          "quantidade": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}